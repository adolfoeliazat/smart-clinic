<p id="notice"><%= notice %></p>

<div class="row">
<h1>Listing Patients</h1>
<div class="pull-right range-query">
    <%= form_tag patients_path, method: :get do %>
      <%= text_field_tag 'search[date_from]', @search.date_from %>
      <%= text_field_tag 'search[date_to]', @search.date_to %>
      <%= submit_tag 'Search', class: 'btn search-button' %>
    <% end %>
  </div>
</div>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Dob</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Date</th>
          <th>Infection</th>
          <th>Injury</th>
          <th>Observations</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @patients.each do |patient| %>
          <tr>
            <td><%= patient.name %></td>
            <td><%= patient.dob %></td>
            <td><%= patient.address %></td>
            <td><%= patient.phone %></td>
            <td><%= patient.date %></td>
            <td><%= patient.infection %></td>
            <td><%= patient.injury %></td>
            <td><%= patient.observations %></td>
            <td><%= link_to 'Show', patient, class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', patient, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Patient', new_patient_path %>
